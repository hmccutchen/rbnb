
<div class="container">

  <div class="text-right">
    <%= link_to "lets add a dog", new_dog_path, class: "btn btn-primary" %>
  </div>

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1519137847-189aca33af2b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=21eff8fb6e8bee9d55679ddc727f9dac&auto=format&fit=crop&w=800&q=60');">
    <div class="banner-content">
      <h1>DogGO</h1>
      <p>rent a dog</p>
    </div>
  </div>


  <div class="row">
    <% @dogs.each do |dog| %>
    <div class="col-xs-12 col-sm-4">

      <div class="card" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=cl_image_path dog.photo %>);">


        <p class="card-category"> <%= dog.breed %></p>
        <div class="card-description">
          <h2><%= dog.name %></h2>
          <p><%= dog.age %></p>
        </div>
      </div>
      <% end %>

    </div>
    <% end %>
  </div>

</div>



</div>
