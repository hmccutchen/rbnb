

<div class="container">

  <h1>Dog details</h1>
  <p>Name: <%= @dog.name %></p>
  <p>Age: <%= @dog.age %></p>
  <p>Breed: <%= @dog.breed %></p>
  <p><%= @dog.description %></p>
  <h4>reservations</h4>
  <% @dog.reservations.each do |d| %>
    <p><%= d.date.to_formatted_s(:long) %></p>
  <% end %>
  <%= link_to "Book",  new_dog_reservation_path(@dog), class: "btn btn-primary" %>
  <hr>

  <%= render "reservations/go_back" %>
  <%= link_to "edit your dog", edit_dog_path(@dog), class: "btn btn-default" %>
</div>


